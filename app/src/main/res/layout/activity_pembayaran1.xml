<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/kotaknol"
    android:paddingLeft="@dimen/kotaknol"
    android:paddingRight="@dimen/kotaknol"
    android:paddingTop="@dimen/kotaknol"
    android:background="#8e292d"
    tools:context="com.example.muffinman.myapplication.utama">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/kotaklimalima"
        android:paddingLeft="@dimen/kotaknol"
        android:paddingRight="@dimen/kotaknol"
        android:paddingTop="50dp"
        android:background="#8e292d"
        tools:context="com.example.muffinman.myapplication.utama">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/kotaknol"
            android:paddingLeft="@dimen/kotaknol"
            android:paddingRight="@dimen/kotaknol"
            android:paddingTop="@dimen/kotaknol"
            android:background="#f1e5d9"
            tools:context="com.example.muffinman.myapplication.utama">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView3">
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/kotak16"
                    android:paddingLeft="@dimen/kotak16"
                    android:paddingRight="@dimen/kotak16"
                    android:paddingTop="@dimen/kotak16"
                    tools:context="com.example.muffinman.myapplication.utama">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:id="@+id/tulisantotalharga"
                        android:textColor="#000"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/tulisantotalharga"
                        android:background="#ffbd21">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga Produk"
                            android:id="@+id/tulisanhargaproduk"
                            android:layout_below="@+id/textView11"
                            android:layout_alignLeft="@+id/textView11"
                            android:layout_alignStart="@+id/textView11"
                            android:layout_marginTop="18dp"
                            android:textColor="#8e292d"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biaya Pengiriman"
                            android:id="@+id/tulisanbiayapengiriman"
                            android:layout_below="@+id/tulisanhargaproduk"
                            android:layout_alignLeft="@+id/tulisanhargaproduk"
                            android:layout_alignStart="@+id/tulisanhargaproduk"
                            android:layout_marginTop="19dp"
                            android:textColor="#8e292d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:id="@+id/textView14"
                            android:layout_alignBaseline="@+id/hargapproduk"
                            android:layout_alignBottom="@+id/hargapproduk"
                            android:layout_toRightOf="@+id/tulisanbiayapengiriman"
                            android:layout_toEndOf="@+id/tulisanbiayapengiriman"
                            android:layout_marginLeft="36dp"
                            android:layout_marginStart="36dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:id="@+id/textView15"
                            android:layout_alignTop="@+id/tulisanbiayapengiriman"
                            android:layout_alignLeft="@+id/textView14"
                            android:layout_alignStart="@+id/textView14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Transfer "
                            android:id="@+id/textView16"
                            android:layout_below="@+id/tulisanbiayapengiriman"
                            android:layout_alignLeft="@+id/tulisanbiayapengiriman"
                            android:layout_alignStart="@+id/tulisanbiayapengiriman"
                            android:layout_marginTop="18dp"
                            android:textColor="#8e292d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:id="@+id/textView17"
                            android:layout_alignBottom="@+id/textView16"
                            android:layout_alignLeft="@+id/textView15"
                            android:layout_alignStart="@+id/textView15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Rp. 107.096"
                            android:textSize="28dp"
                            android:id="@+id/totalpembayaran"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                           android:layout_centerHorizontal="true"
                            android:textColor="#8e292d" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 100.000"
                            android:id="@+id/hargapproduk"
                            android:layout_above="@+id/tulisanbiayapengiriman"
                            android:layout_toRightOf="@+id/textView14"
                            android:layout_toEndOf="@+id/textView14"
                            android:layout_marginLeft="53dp"
                            android:layout_marginStart="53dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 7000"
                            android:id="@+id/biayapengiriman"
                            android:layout_above="@+id/textView16"
                            android:layout_alignLeft="@+id/hargapproduk"
                            android:layout_alignStart="@+id/hargapproduk" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 96"
                            android:id="@+id/kodetransfer"
                            android:layout_alignBottom="@+id/textView17"
                            android:layout_alignLeft="@+id/biayapengiriman"
                            android:layout_alignStart="@+id/biayapengiriman" />
                    </RelativeLayout>



                </RelativeLayout>
            </ScrollView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:text="&quot;Tahukah Anda, dengan membeli barang ini, Anda telah berkontribusi untuk mengurangi masalah sampah di Indonesia&quot;"
                android:id="@+id/tulisanpenghargaan"
                android:layout_marginTop="280dp"
                android:textAlignment="center"
               android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="#000" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Bayar"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:id="@+id/kategori"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pengaturan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/logobayar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
