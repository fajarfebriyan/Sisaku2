                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="9000025920100"
                            android:layout_below="@id/infobankbri"
                            android:id="@+id/norekbri"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="a/n Sisaku"
                            android:layout_below="@id/norekbri"
                            android:id="@+id/anbri"
                            android:layout_marginTop="10dp"
                            />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mandirilogo"
                        android:layout_above="@+id/relativeLayout3"
                        android:layout_toLeftOf="@id/penanda4"
                        android:layout_toStartOf="@id/penanda4"
                        android:layout_marginRight="35dp"
                        android:id="@+id/imageView" />
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bcalogo"
                        android:layout_alignTop="@+id/imageView"
                        android:layout_alignLeft="@+id/relativeLayout4"
                        android:layout_alignStart="@+id/relativeLayout4"
                        android:layout_marginLeft="29dp"
                        android:layout_marginStart="29dp"
                        android:id="@+id/imageView2" />
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:src="@drawable/brilogo"
                        android:layout_alignTop="@+id/penanda4"
                        android:layout_alignRight="@+id/imageView"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bnilogo"
                        android:layout_alignTop="@+id/penanda4"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignStart="@+id/imageView2" />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Konfirmasi Pembayaran"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:id="@+id/kategori"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pengaturan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/logokonfirmasipembayaran"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
