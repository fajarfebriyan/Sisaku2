                        android:layout_toRightOf="@id/penanda4"
                        android:layout_toEndOf="@id/penanda4"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/relativeLayout4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="BCA Cabang"
                            android:id="@+id/infobankbca"
                            android:layout_marginTop="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="9000025920100"
                            android:layout_below="@id/infobankbca"
                            android:id="@+id/norekbca"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="a/n Sisaku"
                            android:layout_below="@id/norekbca"
                            android:id="@+id/anbca"
                            android:layout_marginTop="10dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:background="#8e292d"
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/penanda4"
                        android:layout_toRightOf="@id/penanda4"
                        android:layout_toEndOf="@id/penanda4"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="BNI Cabang"
                            android:id="@+id/infobankbni"
                            android:layout_marginTop="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="9000025920100"
                            android:layout_below="@id/infobankbni"
                            android:id="@+id/norekbni"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="a/n Sisaku"
                            android:layout_below="@id/norekbni"
                            android:id="@+id/anbni"
                            android:layout_marginTop="10dp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:background="#8e292d"
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/penanda4"
                        android:layout_toLeftOf="@id/penanda4"
                        android:layout_toStartOf="@id/penanda4"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffbd21"
                            android:text="BRI Cabang"
                            android:id="@+id/infobankbri"
                            android:layout_marginTop="25dp"
                            />
